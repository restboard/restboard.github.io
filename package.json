{
  "name": "restboard.github.io",
  "version": "1.0.0",
  "description": "Official webiste of the Restboard project",
  "author": "Emanuele Bertoldi <emanuele.bertoldi@gmail.com>",
  "license": "ISC",
  "scripts": {
    "start": "npm-run-all --parallel css eleventy browsersync",
    "eleventy": "eleventy --watch",
    "debug": "set DEBUG=* & eleventy",
    "css": "postcss src/static/css/index.css --o docs/static/css/index.css --watch",
    "build": "cross-env NODE_ENV=production eleventy && cross-env NODE_ENV=production tailwindcss -i src/static/css/index.css -o docs/static/css/index.css",
    "browsersync": "browser-sync start --server docs --files docs --port 8080 --no-notify --no-open"
  },
  "dependencies": {
    "autoprefixer": "^10.4.2",
    "postcss": "^8.4.5"
  },
  "devDependencies": {
    "@11ty/eleventy": "^2.0.0",
    "@tailwindcss/typography": "^0.5.0",
    "alpinejs": "^3.7.1",
    "browser-sync": "^3.0.2",
    "cross-env": "^7.0.3",
    "cssnano": "^5.0.15",
    "html-minifier": "^4.0.0",
    "js-yaml": "^4.1.0",
    "luxon": "^2.3.0",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^9.1.0",
    "prismjs": "^1.26.0",
    "tailwindcss": "^3.0.13"
  },
  "engines": {
    "npm": ">=8.0.0",
    "node": ">=14.0.0"
  }
}